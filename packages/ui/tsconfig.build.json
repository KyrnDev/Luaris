{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"src/main.ts",
		"src/App.vue",
		"src/**/*.spec.ts",
		"src/**/__tests__/**"
	]
}
